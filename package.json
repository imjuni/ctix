{
  "name": "ctix",
  "version": "1.7.0",
  "description": "Automatic create index.ts file",
  "scripts": {
    "prepublishOnly": "node prepublish.js",
    "test": "cross-env NODE_ENV=develop DEBUG=ctix:* jest --coverage --runInBand",
    "test:update": "cross-env NODE_ENV=develop DEBUG=ctix:* jest --runInBand --coverage --updateSnapshot",
    "test:debug": "node --nolazy --inspect ./node_modules/jest/bin/jest --runInBand",
    "ctix": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register ./src/cli.ts single -p tsconfig.json -o . -w -g ./.configs/.ctiignore",
    "dev": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register ./src/cli.ts",
    "prerollup:dev": "npm run clean",
    "rollup:dev": "cross-env NODE_ENV=develop rollup --config ./.configs/rollup.config.dev.ts --configPlugin ts",
    "prerollup:prod": "npm run clean",
    "rollup:prod": "cross-env NODE_ENV=production rollup --config ./.configs/rollup.config.prod.ts --configPlugin ts",
    "debug": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register --nolazy --inspect-brk=9229 ./src/cli.ts ",
    "prebuild": "npm run clean",
    "build": "tsc --incremental",
    "clean": "rimraf ./dist",
    "prepub": "npm run clean && npm run rollup:prod",
    "pub": "cross-env RELEASE_MODE=true npm publish --registry http://localhost:8901 --force",
    "unpub": "npm unpublish --registry http://localhost:8901 --force",
    "prepub:prod": "npm run clean && npm run rollup:prod",
    "pub:prod": "cross-env RELEASE_MODE=true npm publish",
    "lint": "eslint --cache .",
    "deps-diff": "deps-diff md -d prod -d dev --title-list-type '*' --deps-list-type '*' --content-list-type '*'",
    "docs:dev": "vuepress dev docs --config ./.configs/vuepress.config.ts",
    "docs:build": "vuepress build docs --config ./.configs/vuepress.config.ts",
    "predocs:deploy": "npm run docs:build",
    "docs:deploy": "cross-env PUBLIC_URL=\"ctix\" gh-pages -d docs/.vuepress/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/ctix.git"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imjuni/ctix/issues"
  },
  "homepage": "https://imjuni.github.io/ctix",
  "main": "dist/cjs/ctix.js",
  "types": "dist/esm/ctix.d.ts",
  "module": "dist/esm/ctix.js",
  "files": [
    "dist"
  ],
  "bin": {
    "ctix": "./dist/cli.js"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.0.1",
    "@renovamen/vuepress-plugin-mermaid": "^2.0.0-alpha.25",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.4.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/cli-progress": "^3.11.0",
    "@types/debug": "^4.1.7",
    "@types/is-relative": "^1.0.0",
    "@types/jest": "^28.1.8",
    "@types/json5": "^2.2.0",
    "@types/minimatch": "^5.1.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.8.3",
    "@types/parse-gitignore": "^1.0.0",
    "@types/source-map-support": "^0.5.6",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.3",
    "mermaid": "^9.1.7",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "read-pkg": "^5.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typedoc": "^0.23.11",
    "typedoc-plugin-markdown": "^3.13.6",
    "vuepress": "^2.0.0-beta.49",
    "vuepress-plugin-typedoc": "^0.11.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "cli-progress": "^3.11.2",
    "dayjs": "^1.11.5",
    "fast-glob": "^3.2.12",
    "fast-safe-stringify": "^2.1.1",
    "find-up": "^5.0.0",
    "ignore": "^5.2.0",
    "is-relative": "^1.0.0",
    "json5": "^2.2.1",
    "jsonc-parser": "^3.2.0",
    "minimatch": "^5.1.0",
    "minimist": "^1.2.7",
    "my-easy-fp": "^0.15.0",
    "my-node-fp": "^0.8.1",
    "my-only-either": "^1.3.0",
    "ora": "^5.4.1",
    "parse-gitignore": "^2.0.0",
    "pino": "^8.6.1",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-morph": "^16.0.0",
    "tslib": "^2.4.0",
    "type-fest": "^2.19.0",
    "typescript": "^4.8.4",
    "upper-case-first": "^2.0.2",
    "yargs": "^17.6.0"
  }
}
