{
  "name": "ctix",
  "version": "1.8.3",
  "description": "Automatic create index.ts file",
  "scripts": {
    "prepublishOnly": "node prepublish.js",
    "test": "cross-env NODE_ENV=develop DEBUG=ctix:* jest --coverage --runInBand",
    "test:update": "cross-env NODE_ENV=develop DEBUG=ctix:* jest --runInBand --coverage --updateSnapshot",
    "test:debug": "node --nolazy --inspect ./node_modules/jest/bin/jest --runInBand",
    "ctix": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register ./src/cli.ts single -p tsconfig.json -o . -w -g ./.configs/.ctiignore",
    "dev": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register ./src/cli.ts",
    "prerollup:dev": "npm run clean",
    "rollup:dev": "cross-env NODE_ENV=develop rollup --config ./.configs/rollup.config.dev.ts --configPlugin ts",
    "prerollup:prod": "npm run clean",
    "rollup:prod": "cross-env NODE_ENV=production rollup --config ./.configs/rollup.config.prod.ts --configPlugin ts",
    "debug": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register --nolazy --inspect-brk=9229 ./src/cli.ts ",
    "prebuild": "npm run clean",
    "build": "tsc --incremental",
    "clean": "rimraf ./dist",
    "prepub": "npm run clean && npm run rollup:prod",
    "pub": "cross-env RELEASE_MODE=true npm publish --registry http://localhost:8901 --force",
    "unpub": "npm unpublish --registry http://localhost:8901 --force",
    "prepub:prod": "npm run clean && npm run rollup:prod",
    "pub:prod": "cross-env RELEASE_MODE=true npm publish",
    "lint": "eslint --cache .",
    "prettier": "prettier --write src/**/*.ts",
    "dd": "deps-diff md -d prod -d dev --title-list-type '*' --deps-list-type '*' --content-list-type '*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/ctix.git"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imjuni/ctix/issues"
  },
  "homepage": "https://imjuni.github.io/ctix",
  "main": "dist/cjs/ctix.js",
  "types": "dist/esm/ctix.d.ts",
  "module": "dist/esm/ctix.js",
  "files": [
    "dist"
  ],
  "bin": {
    "ctix": "./dist/cli.js"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tsconfig/node18": "^18.2.2",
    "@types/cli-progress": "^3.11.4",
    "@types/debug": "^4.1.10",
    "@types/is-relative": "^1.0.1",
    "@types/jest": "^29.5.6",
    "@types/json5": "^2.2.0",
    "@types/minimatch": "^5.1.2",
    "@types/minimist": "^1.2.4",
    "@types/node": "^20.8.7",
    "@types/parse-gitignore": "^1.0.1",
    "@types/source-map-support": "^0.5.9",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.2",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier-eslint": "^16.1.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "rollup-plugin-ts": "^3.4.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "vue": "^3.3.6"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "cli-progress": "^3.12.0",
    "dayjs": "^1.11.10",
    "fast-glob": "^3.3.1",
    "fast-safe-stringify": "^2.1.1",
    "find-up": "^5.0.0",
    "ignore": "^5.2.4",
    "is-relative": "^1.0.0",
    "json5": "^2.2.3",
    "jsonc-parser": "^3.2.0",
    "minimatch": "^9.0.3",
    "minimist": "^1.2.8",
    "my-easy-fp": "^0.21.0",
    "my-node-fp": "^0.9.0",
    "my-only-either": "^1.3.0",
    "ora": "^5.4.1",
    "parse-gitignore": "^2.0.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "ts-morph": "^20.0.0",
    "tslib": "^2.6.2",
    "type-fest": "^4.5.0",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  }
}
