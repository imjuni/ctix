{
  "name": "ctix",
  "version": "0.5.3",
  "description": "Automatic create index.ts file",
  "main": "dist/cti.js",
  "scripts": {
    "test": "cross-env NODE_ENV=develop DEBUG=ctix:* jest --runInBand",
    "win": "cross-env NODE_ENV=develop DEBUG=ctix:* jest --runInBand",
    "test:debug": "node --nolazy --inspect-brk=9229 ./node_modules/.bin/jest --runInBand",
    "start": "cross-env TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register ./src/ctix.ts",
    "startx": "cross-env DEBUG=ctix:* TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register ./src/ctix.ts",
    "webpack:prod": "cross-env NODE_ENV=production webpack --config webpack.config.prod.cjs",
    "webpack:dev": "cross-env NODE_ENV=production webpack --config webpack.config.dev.cjs",
    "debug": "cross-env DEBUG=ctix:* TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register --nolazy --inspect-brk=9229 ./src/ctix.ts ",
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf ./dist",
    "prepub": "npm run clean && npm run webpack:prod",
    "pub": "npm publish --registry http://localhost:8901 --force",
    "prepub:prod": "npm run clean && npm run webpack:prod",
    "pub:prod": "npm publish",
    "lint": "eslint --ext ts,tsx ./src/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/ctix.git"
  },
  "keywords": [],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imjuni/ctix/issues"
  },
  "homepage": "https://github.com/imjuni/ctix#readme",
  "types": "./dist/ctix.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "ctix": "./dist/ctix.js"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^27.5.1",
    "@types/clui": "^0.3.1",
    "@types/debug": "^4.1.7",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/json5": "^2.2.0",
    "@types/node": "^17.0.21",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.9.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "ts-node": "^10.6.0",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslint": "^6.1.3",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0",
    "webpackbar": "^5.0.2"
  },
  "dependencies": {
    "@oclif/core": "^1.5.0",
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "dayjs": "^1.10.8",
    "debug": "^4.3.3",
    "deepmerge": "^4.2.2",
    "fast-glob": "^3.2.11",
    "fp-ts": "^2.11.8",
    "glob": "^7.2.0",
    "json5": "^2.2.1",
    "my-easy-fp": "^0.10.0",
    "parse-gitignore": "^1.0.1",
    "source-map-support": "^0.5.21",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2",
    "upper-case-first": "^2.0.2",
    "yargs": "^17.3.0"
  }
}